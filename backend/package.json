{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend API for Ahaan's Portfolio Website",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:clean && npm run build:copy",
    "build:clean": "rimraf dist",
    "build:copy": "copyfiles -u 1 src/**/* dist/",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "seed": "node src/scripts/seed.js"
  },
  "keywords": [
    "portfolio",
    "cybersecurity",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Ahaan",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.7",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
